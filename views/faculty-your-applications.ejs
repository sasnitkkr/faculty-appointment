<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <title>Faculty | Your Applications</title>
  </head>
  <body>
    <%- include("partials/faculty-header.ejs"); %>
    <h6 style="margin-left: 32px; margin-top: 12px">
      Your Applications - <%= applications.length %>
    </h6>
    <ul>
      <% applications.forEach((application)=>{%>
      <div class="card" style="margin: 2px auto">
        <li>
          <div>Designation: <%=application.designation%></div>
          <div>College: <%=application.college%></div>
          <div>
            View Job:
            <a href="<%=application.jobLink%>">Click Here</a>
          </div>
        </li>
      </div>
      <%})%>
    </ul>
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
